<div class="container">
  <div class="artpiece-banner">
    <% if @artpiece.photo.attached? %>
      <div class="artpiece-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @artpiece.photo.key %>')">
        <div class="artpiece-info">
          <h1><%= @artpiece.title %></h1>
          <p><%= @artpiece.artist %></p>
        </div>
      </div>
    <% else %>
      <div class="artpiece-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "https://images.unsplash.com/photo-1423742774270-6884aac775fa?ixlib=rb-1.2.1&q=80&fm=jpg&crop=entropy&cs=tinysrgb&w=1080&fit=max&ixid=eyJhcHBfaWQiOjExODA5M30" %>')";>
        <div class="artpiece-info">
          <h1 id="title-show"><%= @artpiece.title %></h1>
          <p><%= @artpiece.artist %></p>
        </div>
      </div>
    <% end %>
  </div>
    <%= @artpiece.description %>
  <br>
  <div style="display: flex; justify-content: space-between;">
    <div class="artpiece-price-availability">
      <p><%= @artpiece.price %>â‚¬ par jour</p>
        <% if @artpiece.availability %>
          <p>Available</p>
        <% else %>
          <p>Not available</p>
        <% end %>
    </div>
    <div class="banner-content justify-content-center">
      <%= link_to "Back to Artpieces", artpieces_path, class: "btn btn-primary" %> |
      <%= link_to 'Edit', edit_artpiece_path(@artpiece), :class => "btn btn-primary" %> |
      <%= link_to 'Delete Artpiece', artpiece_path(@artpiece), method: :delete, data: {confirm: "Are you sure?"}, :class => "btn btn-primary" %>
    </div>
  </div>
</div>
