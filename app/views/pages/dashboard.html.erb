<div class="dashboard text-align-center">
  <div class="container">
    <br>
    <h1>Welcome <%= current_user.first_name.capitalize %></h1>
    <h2>Your Bookings:</h2>
    <div class="card-product">
      <div class="card-product-infos">
        <% current_user.bookings.each do |booking| %>
          <li>
            Youâ€™ve booked: <strong><%= booking.artpiece[:title] %></strong> created by <strong><%= booking.artpiece[:artist] %></strong>
          </li>
          <%if policy(booking).edit? %>
            <%= link_to edit_artpiece_booking_path(booking.artpiece.id, booking.id) do %>
             <i class="fa fa-arrow-right" aria-hidden="true"></i> Edit
            <% end %>
            <%= link_to booking_path(booking.id), method: :delete do %>
              <i class="fa fa-trash" aria-hidden="true"></i>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
