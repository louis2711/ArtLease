<div class="navbar navbar-expand-sm navbar-light navbar-lewagon ">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "articon.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if current_user %>
        <li><%= link_to "Dashboard", dashboard_path, class: "nav-link #{'active nav-active' if params[:controller] == "pages" && params[:action] == "dashboard"}" %></li>
      <% end %>
      <li><%= link_to "Add an artpiece", new_artpiece_path, class: "nav-link #{'active nav-active' if params[:controller] == "artpieces" && params[:action] == "new"}" %></li>
      <li><%= link_to "Artpieces to rent", artpieces_path, class: "nav-link #{'active nav-active' if params[:controller] == "artpieces" && params[:action] == "index"}" %></li>
      <% if user_signed_in? %>
        <li class="btn-navbar"><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %></li>
      <% else %>
        <li class="btn-navbar"><%= link_to "Login", new_user_session_path, class: "nav-link #{'active nav-active' if params[:controller] == "devise/sessions" && params[:action] == "new"}" %></li>
      <% end %>
    </ul>
  </div>
</div>
